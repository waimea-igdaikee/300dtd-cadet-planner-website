{#=====================================================
  User Login page
  - Form for logging in
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Parade Planner

{% endblock %}


{% block content %}

    <article>
    
        <h2>Log In to Continue</h2>

        <form action="/login_user" method="POST">

            <input
                type="text"
                name="username"
                placeholder="Username"
                required
            >

            <input
                type="password"
                name="password"
                placeholder="Password"
                required
            >

            <button>Continue</button>

        </form>

        <footer>
            Or, if you don't have an account, <a href="/register">register</a>
        </footer>

    </article>

{% endblock %}

